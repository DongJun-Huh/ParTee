<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:constraintSetEnd="@id/detail"
        app:constraintSetStart="@id/start" />

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/layout_matching_searching"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="@color/black" />
        <Constraint
            android:id="@id/layout_matching_not_exist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/cardOne"
            android:alpha="0" />
        <Constraint
            android:id="@id/cardTwo"
            android:alpha="0" />

        <Constraint
            android:id="@id/layout_matching_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:alpha="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@id/layout_matching_filtering_current"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:background="@drawable/background_radius_12"
            android:backgroundTint="@color/gray_D9D9D9"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_matching_appbar"
            app:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@id/layout_matching_reactions"
            android:alpha="0" />
    </ConstraintSet>

    <Transition
        android:id="@+id/detailToLeft"
        app:constraintSetEnd="@+id/unlike"
        app:constraintSetStart="@+id/detail"
        app:motionInterpolator="linear">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:dragThreshold="1"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/cardOne" />

    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenUnlike"
        app:constraintSetStart="@+id/unlike"
        app:duration="150" />

    <Transition
        android:id="@+id/detailToRight"
        app:constraintSetEnd="@+id/like"
        app:constraintSetStart="@+id/detail"
        app:motionInterpolator="linear">
        <OnSwipe
            app:dragDirection="dragRight"
            app:dragThreshold="1"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/cardOne" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"
                app:percentY="-0.1" />
        </KeyFrameSet>
    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenLike"
        app:constraintSetStart="@+id/like"
        app:duration="150" />

    <ConstraintSet android:id="@+id/detail">
        <Constraint
            android:id="@+id/layout_matching_searching"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/black" />
        <Constraint
            android:id="@id/cardOne"
            android:alpha="1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>
        <Constraint
            android:id="@id/cardTwo"
            android:alpha="1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/layout_matching_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:alpha="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@id/layout_matching_filtering_current"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:background="@drawable/background_radius_12"
            android:backgroundTint="@color/gray_D9D9D9"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cardOne"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/cardOne"
            app:layout_constraintTop_toBottomOf="@id/layout_matching_appbar"
            app:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@id/layout_matching_reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:alpha="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/unlike">
        <Constraint
            android:id="@id/cardOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="80dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9">
            <Transform android:rotation="-15" />
        </Constraint>

        <Constraint
            android:id="@id/cardTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenUnlike"
        app:deriveConstraintsFrom="@id/unlike">

        <Constraint
            android:id="@id/cardOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="500dp"
            android:layout_marginBottom="80dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7">
            <Transform android:rotation="-15" />
        </Constraint>
        <Constraint
            android:id="@id/cardTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/like">
        <Constraint
            android:id="@id/cardOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.9">
            <Transform android:rotation="15" />
        </Constraint>

        <Constraint
            android:id="@id/cardTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenLike"
        app:deriveConstraintsFrom="@id/like">

        <Constraint
            android:id="@id/cardOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            android:alpha="1"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7">
            <Transform android:rotation="15" />
        </Constraint>
        <Constraint
            android:id="@id/cardTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/notExist">
        <Constraint
            android:id="@+id/layout_matching_searching"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/black" />
        <Constraint
            android:id="@id/layout_matching_not_exist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/cardOne"
            android:alpha="0" />
        <Constraint
            android:id="@id/cardTwo"
            android:alpha="0" />

        <Constraint
            android:id="@id/layout_matching_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:alpha="1"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@id/layout_matching_filtering_current"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:background="@drawable/background_radius_12"
            android:backgroundTint="@color/gray_D9D9D9"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_matching_appbar"
            app:layout_constraintVertical_bias="0.0" />
    </ConstraintSet>
</MotionScene>