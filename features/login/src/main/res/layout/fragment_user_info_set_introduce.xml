<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.UserInfoSetIntroduceFragment">

    <data>

        <variable
            name="vm"
            type="com.golfzon.login.ui.LoginViewModel" />

        <import type="android.view.View" />

        <import type="androidx.navigation.Navigation" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_28"
        android:backgroundTint="@color/gray_700_272929"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:id="@+id/layout_user_info_set_introduce_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_user_info_set_introduce_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center_vertical"
                android:letterSpacing="0.01"
                android:lineHeight="27sp"
                android:text="@string/register_user_info_set_introduce_title"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btn_user_info_set_introduce_close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:padding="8dp"
                android:src="@drawable/ic_x"
                android:tint="@color/white" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_user_info_set_introduce"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/selector_edittext_radius_16_enabled"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:hint="@string/register_user_info_set_introduce_description"
            android:lineHeight="21sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:text="@{vm.introduceMessage}"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_500_464B4B"
            android:textFontWeight="500"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_user_info_set_introduce_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/selector_button_background_radius_16_enabled"
            android:fontFamily="@font/pretendard_semi_bold"
            android:lineHeight="24sp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="@string/save"
            android:textSize="16sp" />
    </LinearLayout>
</layout>