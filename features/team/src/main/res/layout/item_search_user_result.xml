<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.golfzon.domain.model.User" />

        <import type="com.golfzon.domain.model.UserInfo" />

        <import type="com.golfzon.core_ui.ImageUploadUtil" />

        <variable
            name="requestManager"
            type="com.bumptech.glide.RequestManager" />

        <variable
            name="user"
            type="com.golfzon.domain.model.User" />

        <variable
            name="isCurUser"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_background_radius_16_pressed"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="3dp"
        android:paddingBottom="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_search_user_result"
            imageType="@{ImageUploadUtil.ImageType.USER}"
            imageUId="@{user.profileImg}"
            requestManager="@{requestManager}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tag_user"
            app:shapeAppearance="@style/ShapeAppearance.circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="top"
                android:letterSpacing="0"
                android:lineSpacingExtra="5sp"
                android:text="@{user.nickname}"
                android:textColor="@color/primary_A4EF69"
                android:textFontWeight="600"
                android:textSize="16sp"
                tools:text="허동준" />

            <LinearLayout
                android:id="@+id/layout_team_info_user_detail_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_cake"
                        android:tint="@color/primary_A4EF69" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="@{@string/info_age(user.age)}"
                        android:textColor="@color/primary_A4EF69"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        tools:text="25세" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_flag"
                        android:tint="@color/primary_A4EF69" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="@{@string/info_years_playing(user.yearsPlaying)}"
                        android:textColor="@color/primary_A4EF69"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        tools:text="8년" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_flash"
                        android:tint="@color/primary_A4EF69" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="@{@string/info_average(user.average)}"
                        android:textColor="@color/primary_A4EF69"
                        android:textFontWeight="500"
                        android:textSize="12sp"
                        tools:text="100타" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>