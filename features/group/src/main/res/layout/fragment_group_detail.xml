<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GroupDetailFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/layout_group_detail_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_group_detail_team_first"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/guideline_group_detail_team_divide"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_group_detail_team_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:scaleX="1.2"
                    android:src="@drawable/user_sample" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background_gradation_black_to_transparent" />

                <LinearLayout
                    android:id="@+id/layout_group_detail_team_first_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/tv_group_detail_team_first_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:lineHeight="33sp"
                        android:text="허동준"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_cake"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_first_info_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="25세"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_flag"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_first_info_years_playing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="8년"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_flash"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_first_info_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="100타"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- TODO Recyclerview로 변경 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/layout_group_detail_team_first_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample2"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample2"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample2"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_group_detail_team_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_group_detail_team_second"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_group_detail_team_divide">

                <ImageView
                    android:id="@+id/iv_group_detail_team_second"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:scaleX="1.2"
                    android:src="@drawable/user_sample2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/background_gradation_black_to_transparent" />

                <LinearLayout
                    android:id="@+id/layout_group_detail_team_second_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/tv_group_detail_team_second_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:lineHeight="33sp"
                        android:text="두번째"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_cake"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_second_info_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="25세"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_flag"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_second_info_years_playing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="8년"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:src="@drawable/ic_flash"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/tv_group_detail_team_second_info_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="100타"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- TODO Recyclerview로 변경 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/layout_group_detail_team_first_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginTop="11dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_sample"
                        app:shapeAppearance="@style/ShapeAppearance.radius28" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_group_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38.5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/background_radius_100"
            android:backgroundTint="#EBEDF3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintBottom_toTopOf="@id/layout_group_detail_actions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_people" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="총 4명"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"
                    android:tint="@color/primary_8B95B3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="서울"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="주중 오전"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_group_detail_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_group_detail_reservation"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background_radius_12"
                android:backgroundTint="@color/primary_btn_AFB7CF"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="예약"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_group_detail_chat"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background_radius_12"
                android:backgroundTint="@color/primary_btn_AFB7CF"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="채팅"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_group_detail_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#80FFFFFF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/btn_group_detail_appbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:src="@drawable/ic_back"
                android:tint="@color/black" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>