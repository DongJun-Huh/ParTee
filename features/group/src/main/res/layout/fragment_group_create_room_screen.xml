<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GroupCreateRoomScreenFragment">

    <data>

        <import type="androidx.navigation.Navigation" />

        <import type="java.util.Locale" />

        <import type="java.text.NumberFormat" />

        <import type="java.time.format.DateTimeFormatter" />

        <variable
            name="vm"
            type="com.golfzon.group.GroupViewModel" />

        <variable
            name="groupUId"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layout_create_room_screen_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/btn_create_room_screen_appbar_back"
                onDebounceClick="@{view -> Navigation.findNavController(view).navigateUp()}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_create_room_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingHorizontal="20dp"
            android:paddingTop="12dp"
            app:layout_constraintBottom_toTopOf="@id/layout_create_room_screen_participate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_create_room_screen_appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_room_screen_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_create_room_screen_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_stroke_1_bottom"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="center_vertical|start"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="6sp"
                        android:maxLines="1"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="@{vm.createRoomScreenDateTime.format(DateTimeFormatter.ofPattern(`yyyy년 MM월 dd일 EEEE`))}"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="2023년 12월 4일 월요일" />

                    <ImageButton
                        android:id="@+id/btn_create_room_screen_date_set"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/layout_create_room_screen_time_and_place"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_create_room_screen_date"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:letterSpacing="0"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/create_room_screen_time"
                            android:textColor="@color/primary_A4EF69"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_create_room_screen_time"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_radius_8"
                            android:backgroundTint="@color/blue_AFB7CF_opacity_20"
                            android:fontFamily="@font/pretendard_medium"
                            android:letterSpacing="0"
                            android:lineSpacingExtra="5sp"
                            android:maxLines="1"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:singleLine="true"
                            android:text="@{vm.createRoomScreenDateTime.format(DateTimeFormatter.ofPattern(`a hh시 mm분`))}"
                            android:textColor="@color/primary_A4EF69"
                            android:textSize="16sp"
                            tools:text="오전 11시 50분" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_create_room_screen_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_create_room_screen_time_and_place"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_create_room_screen_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/create_room_screen_fee"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/et_create_room_screen_fee_input"
                        moneyFormattedText="@={vm.createRoomScreenFee}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_radius_8"
                        android:backgroundTint="@color/blue_AFB7CF_opacity_20"
                        android:fontFamily="@font/pretendard_medium"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_room_screen_title"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="130,000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="5sp"
                        android:text="@string/money_unit_korean"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_create_room_screen_title"
                        app:layout_constraintVertical_bias="0.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_create_room_screen_fee"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/place"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_create_room_screen_place"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius_8"
                        android:backgroundTint="@color/blue_AFB7CF_opacity_20"
                        android:fontFamily="@font/pretendard_medium"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="5sp"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:text="@{vm.createRoomScreenPlaceName}"
                        android:textColor="@color/primary_A4EF69"
                        android:textSize="16sp"
                        tools:text="한강이북점" />

                    <com.golfzon.core_ui.map.CustomWebViewContainer
                        android:id="@+id/cardview_create_room_screen_place_map"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="24dp">

                        <WebView
                            android:id="@+id/webview_create_room_screen_place_map"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.golfzon.core_ui.map.CustomWebViewContainer>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_create_room_screen_participate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create_room_screen_complete"
                onDebounceClick="@{() -> vm.createScreenRoom(groupUId)}"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/selector_button_background_radius_12_enabled"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:lineHeight="20sp"
                android:padding="10dp"
                android:stateListAnimator="@null"
                android:text="@string/group_create_room"
                android:textColor="@drawable/selector_textview_enabled"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>