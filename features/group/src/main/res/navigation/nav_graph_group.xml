<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_group"
    app:startDestination="@id/GroupHomeFragment">
    <fragment
        android:id="@+id/GroupHomeFragment"
        android:name="com.golfzon.group.GroupHomeFragment"
        android:label="fragment_group_home"
        tools:layout="@layout/fragment_group_home">

        <action
            android:id="@+id/action_groupHomeFragment_to_groupDetailFragment"
            app:destination="@id/GroupDetailFragment"
            app:enterAnim="@anim/translate_from_right_in"
            app:exitAnim="@anim/translate_to_left_out"
            app:popEnterAnim="@anim/translate_from_left_in"
            app:popExitAnim="@anim/translate_to_right_out" />

    </fragment>
    <fragment
        android:id="@+id/GroupDetailFragment"
        android:name="com.golfzon.group.GroupDetailFragment"
        android:label="fragment_group_detail"
        tools:layout="@layout/fragment_group_detail">
        <argument
            android:name="groupUId"
            app:argType="string" />

        <action
            android:id="@+id/action_groupDetailFragment_to_groupCreateRoomScreenFragment"
            app:destination="@id/GroupCreateRoomScreenFragment"
            app:enterAnim="@anim/translate_from_right_in"
            app:exitAnim="@anim/translate_to_left_out"
            app:popEnterAnim="@anim/translate_from_left_in"
            app:popExitAnim="@anim/translate_to_right_out" />
    </fragment>
    <fragment
        android:id="@+id/GroupCreateRoomScreenFragment"
        android:name="com.golfzon.group.GroupCreateRoomScreenFragment"
        android:label="fragment_group_create_room_screen"
        tools:layout="@layout/fragment_group_create_room_screen">
        <argument
            android:name="groupUId"
            app:argType="string" />
        <action
            android:id="@+id/action_groupCreateRoomScreenFragment_to_mapFinderFragment"
            app:destination="@id/MapFinderFragment"
            app:enterAnim="@anim/translate_from_right_in"
            app:exitAnim="@anim/translate_to_left_out"
            app:popExitAnim="@anim/translate_to_right_out">
            <argument
                android:name="recruitPlaceUId"
                android:defaultValue=""
                app:argType="string" />
            <argument
                android:name="isEdit"
                android:defaultValue="false"
                app:argType="boolean" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/MapFinderFragment"
        android:name="com.golfzon.core_ui.map.MapFinderFragment"
        android:label="fragment_map_finder"
        tools:layout="@layout/fragment_map_finder" />
</navigation>