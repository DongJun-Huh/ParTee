<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecruitHomeFragment">

    <data>

        <variable
            name="vm"
            type="com.golfzon.recruit.RecruitViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_recruit_appbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tv_recruit_appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:gravity="center"
                android:letterSpacing="0"
                android:lineSpacingExtra="6sp"
                android:text="모임 찾기"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/layout_recruit_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="19dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_recruit_appbar"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- TODO 해당 레이아웃 내 뷰들은 모두 수정 대상-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="날짜"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="시간"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="지역"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="지점"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_background_radius_100_stroke_1"
                    android:textColor="@drawable/selector_textview_primary_to_white"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="연박"
                    android:textFontWeight="500" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_background_radius_100_stroke_1"
                    android:textColor="@drawable/selector_textview_primary_to_white"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="부부/커플"
                    android:textFontWeight="500" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_background_radius_100_stroke_1"
                    android:textColor="@drawable/selector_textview_primary_to_white"
                    android:button="@null"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="비용 없음"
                    android:textFontWeight="500" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recruit_posts"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_recruit_filters"
            tools:itemCount="5"
            tools:listitem="@layout/item_recruit_post" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_recruit_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="72dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/background_radius_100"
            app:backgroundTint="@color/primary_8B95B3"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextColor="@drawable/selector_textview_white_50_to_white"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_navigation_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>