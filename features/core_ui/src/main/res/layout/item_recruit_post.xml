<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="recruitDetail"
            type="com.golfzon.domain.model.Recruit" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/scrollview_recruit_post_badges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/layout_recruit_post_badges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:id="@+id/layout_recruit_post_badge_couple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_hearts"
                        app:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="부부/커플"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_recruit_post_badge_soon_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_timer"
                        app:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="마감 임박"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_recruit_post_badge_consecutive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_moon"
                        app:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="연박"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_recruit_post_badge_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_radius_100_stroke_1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_money"
                        app:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="추가비용 없음"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/layout_recruit_post_info_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollview_recruit_post_badges"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="62dp"
                android:background="@drawable/btn_background_radius_12"
                android:backgroundTint="#80EBEDF3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:fontFeatureSettings="600"
                    android:letterSpacing="0"
                    android:text="수요일"
                    android:textColor="@color/primary_8B95B3"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pretendard_medium"
                    android:fontFeatureSettings="500"
                    android:letterSpacing="0"
                    android:text="12"
                    android:textColor="@color/primary_8B95B3"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="AM 11:50"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_location"
                        android:tint="@color/primary_8B95B3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="@{recruitDetail.recruitPlace}"
                        tools:text="한강이북점"
                        android:textColor="@color/primary_8B95B3"
                        android:textFontWeight="500" />
                </LinearLayout>
            </LinearLayout>


            <!-- TODO 현재 참여중인 팀원 이미지 출력 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recruit_post_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TODO 삭제 예정 -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_recruit_post_users1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_sample"
                    app:shapeAppearance="@style/ShapeAppearance.circle" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_recruit_post_users2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_sample"
                    app:shapeAppearance="@style/ShapeAppearance.circle" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_recruit_post_users3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_sample"
                    app:shapeAppearance="@style/ShapeAppearance.circle" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_recruit_post_users4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_sample"
                    app:shapeAppearance="@style/ShapeAppearance.circle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_radius_100"
            android:backgroundTint="#80AFB7CF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_recruit_post_info_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="~ 12월 1일"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/background_radius_100"
                    android:backgroundTint="#80AFB7CF"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:gravity="center"
                    android:letterSpacing="0"
                    android:lineSpacingExtra="3sp"
                    android:paddingHorizontal="4dp"
                    android:text="D-1"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="600"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moneys"
                    android:tint="@color/primary_8B95B3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="130,000원"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="연박 X"
                    android:textColor="@color/primary_8B95B3"
                    android:textFontWeight="500"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>