<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.golfzon.core_ui.ImageUploadUtil" />

        <variable
            name="requestManager"
            type="com.bumptech.glide.RequestManager" />

        <variable
            name="group"
            type="com.golfzon.domain.model.Group" />

        <variable
            name="screenRoomInfo"
            type="com.golfzon.domain.model.GroupScreenRoomInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_radius_24"
        android:backgroundTint="@color/white_F5F6F9"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/layout_group_recruit_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/ShapeAppearance.circle"
                    app:strokeColor="@color/white_EBEDF3"
                    app:strokeWidth="2dp"
                    tools:src="@drawable/user_sample2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:lineHeight="24sp"
                    android:textColor="@color/primary_A4EF69"
                    android:textSize="16sp"
                    tools:text="골프존" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/ShapeAppearance.circle"
                    app:strokeColor="@color/white_EBEDF3"
                    app:strokeWidth="2dp"
                    tools:src="@drawable/user_sample2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:lineHeight="24sp"
                    android:textColor="@color/primary_A4EF69"
                    android:textSize="16sp"
                    tools:text="골프존" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/ShapeAppearance.circle"
                    app:strokeColor="@color/white_EBEDF3"
                    app:strokeWidth="2dp"
                    tools:src="@drawable/user_sample2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:lineHeight="24sp"
                    android:textColor="@color/primary_A4EF69"
                    android:textSize="16sp"
                    tools:text="골프존" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearance="@style/ShapeAppearance.circle"
                    app:strokeColor="@color/white_EBEDF3"
                    app:strokeWidth="2dp"
                    tools:src="@drawable/user_sample2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:lineHeight="24sp"
                    android:textColor="@color/primary_A4EF69"
                    android:textSize="16sp"
                    tools:text="골프존" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_radius_100"
            android:backgroundTint="@color/white_EBEDF3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_people" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="@{`총 `+ group.headCount + `명`}"
                    android:textColor="@color/primary_A4EF69"
                    android:textFontWeight="500"
                    android:textSize="12sp"
                    tools:text="총 4명" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{screenRoomInfo.screenRoomPlaceName.isEmpty ? (group.days + ` ` + group.times) : (screenRoomInfo.screenRoomDateTime.monthValue + `.` + screenRoomInfo.screenRoomDateTime.dayOfMonth + ` ` + screenRoomInfo.screenRoomDateTime.hour + `:` + screenRoomInfo.screenRoomDateTime.minute)}"
                    android:textColor="@color/primary_A4EF69"
                    android:textFontWeight="500"
                    android:textSize="12sp"
                    tools:text="주중 오전" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"
                    android:tint="@color/primary_A4EF69" />

                <TextView
                    android:id="@+id/tv_group_location"
                    displayListsToString="@{screenRoomInfo.screenRoomPlaceName.isEmpty ? group.locations : null}"
                    divider="@{`, `}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeStepGranularity="0.5sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/pretendard_medium"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/primary_A4EF69"
                    android:textFontWeight="500"
                    tools:text="서울" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>